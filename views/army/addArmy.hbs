<div class="row justify-content-md-center" style="margin-top: 30px">
    <div class="col-md-4">

        <h2>Add an army</h2>

        {{#if message}}
        <div class="alert {{messageClass}}" role="alert">
            {{message}}
        </div>
        {{/if}}

        <form method="POST" action="/army/add">
            <div class="form-group">
                <label for="nameInput">Name</label>
                <input name="name" type="text" class="form-control" id="nameInput" required="true">
            </div>

            <div class="form-group">
                <label for="forceInput">Force</label>
                <select class="custom-select" name="forceName" id="forceInput" required="true">
                    {{#each forces as |force|}}
                    <option value="{{force.name}}">{{force.name}}</option>
                    {{/each}}
                </select>
            </div>

            <button type="submit" class="btn btn-primary">Add</button>
        </form>
    </div>
</div>
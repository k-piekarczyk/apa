<div class="row justify-content-md-center" style="margin-top: 30px">
    <div class="col-md-4">

        <h2>Add Paint</h2>

        {{#if message}}
            <div class="alert {{messageClass}}" role="alert">
                {{message}}
            </div>
        {{/if}}

        <form method="POST" action="/paint/add">
            <div class="form-group">
                <label for="nameInput">Name</label>
                <input name="name" type="text" class="form-control" id="nameInput" required="true">
            </div>

            <div class="form-group">
                <label for="typeInput">Password</label>
                <input name="type" type="text" class="form-control" id="typeInput" placeholder="base | layer | shade" required="true">
            </div>

            <button type="submit" class="btn btn-primary">Add</button>
        </form>
    </div>
</div>
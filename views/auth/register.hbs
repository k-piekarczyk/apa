<div class="row justify-content-md-center" style="margin-top: 30px">
    <div class="col-md-4">

        <h2>Register</h2>

        {{#if message}}
            <div class="alert {{messageClass}}" role="alert">
                {{message}}
            </div>
        {{/if}}

        <form method="POST" action="/register">
            <div class="form-group">
                <label for="usernameInput">Username</label>
                <input name="username" type="text" class="form-control" id="usernameInput" required="true">
            </div>

            <div class="form-group">
                <label for="passwordInput">Password</label>
                <input name="password" type="password" class="form-control" id="passwordInput" placeholder="Password" required="true">
            </div>

            <div class="form-group">
                <label for="confirmPasswordInput">Confirm Password</label>
                <input name="confirmPassword" type="password" class="form-control" id="confirmPasswordInput"
                    placeholder="Re-enter your password here" required="true">
            </div>

            <button type="submit" class="btn btn-primary">Login</button>
        </form>
    </div>
</div>